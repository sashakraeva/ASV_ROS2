<?xml version="1.0"?>
<robot name="hull_model">

    <!-- Base link for the hull -->
    <link name="base_link">
        <visual>
            <geometry>
                <!-- Define the box shape with dimensions: length, width, height -->
                <box size="1.0 0.5 0.3" />  <!-- 1m x 0.5m x 0.3m -->
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <box size="1.0 0.5 0.3" />
            </geometry>
        </collision>
        <inertial>
            <mass value="10.0"/>  <!-- Mass of the hull -->
            <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
        </inertial>
    </link>

    <!-- Define a simple wheel to attach to the hull (optional) -->
    <joint name="wheel_joint" type="fixed">
        <parent link="base_link"/>
        <child link="wheel"/>
        <origin xyz="0.5 0.0 0.0" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <!-- Define the wheel -->
    <link name="wheel">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.2" />
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.1" length="0.2" />
            </geometry>
        </collision>
        <inertial>
            <mass value="2.0"/>
            <inertia ixx="0.05" ixy="0.0" ixz="0.0" iyy="0.05" iyz="0.0" izz="0.05"/>
        </inertial>
    </link>

</robot>
