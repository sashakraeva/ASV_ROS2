<?xml version="1.0" ?>
<sdf version="1.7">
  <model name="hull">
    <static>false</static>
    <pose>0 0 0.25 0 0 0</pose>

    <!-- Base Link -->
    <link name="base_link">
      <visual name="base_visual">
        <geometry>
          <box>
            <size>2.0 1.0 0.5</size>
          </box>
        </geometry>
        <material>
          <ambient>0 0 1 1</ambient>
        </material>
      </visual>

      <collision name="base_collision">
        <geometry>
          <box>
            <size>2.0 1.0 0.5</size>
          </box>
        </geometry>
      </collision>

      <inertial>
        <mass>50.0</mass>
        <inertia>
          <ixx>1.0</ixx> <iyy>1.0</iyy> <izz>1.0</izz>
          <ixy>0</ixy> <ixz>0</ixz> <iyz>0</iyz>
        </inertia>
      </inertial>
    </link>

    <!-- Left Wheel -->
    <link name="left_wheel">
      <pose>-1 0 -0.25 0 0 0</pose>
      <visual name="left_wheel_visual">
        <geometry>
          <cylinder>
            <radius>0.25</radius>
            <length>0.1</length>
          </cylinder>
        </geometry>
      </visual>
      <collision name="left_wheel_collision">
        <geometry>
          <cylinder>
            <radius>0.25</radius>
            <length>0.1</length>
          </cylinder>
        </geometry>
      </collision>
      <inertial>
        <mass>2.0</mass>
      </inertial>
    </link>

    <!-- Right Wheel -->
    <link name="right_wheel">
      <pose>1 0 -0.25 0 0 0</pose>
      <visual name="right_wheel_visual">
        <geometry>
          <cylinder>
            <radius>0.25</radius>
            <length>0.1</length>
          </cylinder>
        </geometry>
      </visual>
      <collision name="right_wheel_collision">
        <geometry>
          <cylinder>
            <radius>0.25</radius>
            <length>0.1</length>
          </cylinder>
        </geometry>
      </collision>
      <inertial>
        <mass>2.0</mass>
      </inertial>
    </link>

    <!-- Joints for the Wheels -->
    <joint name="left_wheel_joint" type="revolute">
      <parent>base_link</parent>
      <child>left_wheel</child>
      <pose>-1 0 -0.25 0 0 0</pose>
      <axis>
        <xyz>0 1 0</xyz>
        <limit>
          <lower>-3.0</lower>
          <upper>3.0</upper>
        </limit>
      </axis>
    </joint>

    <joint name="right_wheel_joint" type="revolute">
      <parent>base_link</parent>
      <child>right_wheel</child>
      <pose>1 0 -0.25 0 0 0</pose>
      <axis>
        <xyz>0 1 0</xyz>
        <limit>
          <lower>-3.0</lower>
          <upper>3.0</upper>
        </limit>
      </axis>
    </joint>

    <!-- âœ… Ignition Gazebo Diff Drive Plugin -->
    <plugin filename="ignition-gazebo-diff-drive-system" name="diff_drive">
      <left_joint>left_wheel_joint</left_joint>
      <right_joint>right_wheel_joint</right_joint>
      <wheel_separation>2.0</wheel_separation>
      <wheel_radius>0.25</wheel_radius>
      <odom_publish_frequency>20</odom_publish_frequency>
      <topic>/cmd_vel</topic>
      <odom_topic>/odom</odom_topic>
    </plugin>

  </model>
</sdf>
